<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.brewcounter">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".SessionHistoryActivity">
        </activity>
        <activity android:name=".TotalStatisticsActivity">
        </activity>
        <activity android:name=".NewSessionActivity">
        </activity>
        <activity android:name=".SettingsActivity">
        </activity>
        <activity android:name=".StatisticsActivity">
        </activity>
        <activity android:name=".TotalMode">
        </activity>
        <activity android:name=".SessionMode">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>