<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/session_mode"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/btnSession"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="117dp"
            android:layout_marginStart="117dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <Button
            android:text="@string/total_tally"
            android:layout_width="124dp"
            android:layout_height="49dp"
            android:id="@+id/btnTally"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSession" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="117dp" android:layout_marginStart="117dp"
            android:layout_below="@+id/btnSession" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <Button
            android:text="@string/statistics"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnStatistic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="117dp"
            android:layout_marginStart="117dp"
            android:layout_marginTop="61dp" app:layout_constraintTop_toBottomOf="@+id/btnTally"
            android:layout_alignParentStart="true" android:layout_alignParentLeft="true"
            android:layout_below="@+id/btnTally"/>
    <Button
            android:text="@string/settings"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettings"
            app:layout_constraintTop_toBottomOf="@+id/btnStatistic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="117dp"
            android:layout_marginStart="117dp" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:layout_marginTop="61dp"
            android:layout_below="@+id/btnStatistic"/>
</RelativeLayout>