<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/session_mode"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/btnSession"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="144dp"
            android:layout_marginStart="144dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="144dp"/>
    <Button
            android:text="@string/total_tally"
            android:layout_width="124dp"
            android:layout_height="49dp"
            android:id="@+id/btnTally"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSession" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp"/>
    <Button
            android:text="@string/statistics"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnStatistic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="144dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/btnTally"
    />
    <Button
            android:text="@string/settings"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettings"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/btnStatistic"/>
</android.support.constraint.ConstraintLayout>