<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SettingsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/sBeerLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp">
            <TextView
                    android:text="@string/beer033"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/tvSmallBeer"
                    android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            />
            <EditText
                    android:hint="@string/price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNone"
                    android:layout_gravity="center"
                    android:layout_marginLeft="64dp"
                    android:ems="6"
                    android:id="@+id/tvSbPrice"
            />
            <TextView
                    android:text="@string/default_price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSbTotalPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lBeerLay"
                app:layout_constraintTop_toBottomOf="@id/sBeerLay" android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent">
            <TextView
                    android:text="@string/beer05"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLargeBeer"
                    android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            />
            <EditText
                    android:hint="@string/price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/tvLbPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="75dp"
            />
            <TextView
                    android:text="@string/default_price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLbTotalPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"

            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/longDrinkLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lBeerLay" android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent">
            <TextView
                    android:text="@string/long_drink"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLongDrink"
                    android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            />
            <EditText
                    android:hint="@string/price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/tvLdPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="64dp"
            />
            <TextView
                    android:text="@string/default_price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLdTotalPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ciderLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/longDrinkLay" android:layout_marginTop="32dp">
            <TextView
                    android:text="@string/cider"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCider"
                    android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            />
            <EditText
                    android:hint="@string/price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/tvCiderPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="114dp"
            />
            <TextView
                    android:text="@string/default_price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCiderTotalPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"
            />
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/wineGlassLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ciderLay" android:layout_marginTop="32dp">
            <TextView
                    android:text="@string/wine_glass"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvWineGlass"
                    android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            />
            <EditText
                    android:hint="@string/price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/tvWgPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="62dp"
            />
            <TextView
                    android:text="@string/default_price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvWgTotalPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/shotsLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/wineGlassLay" android:layout_marginTop="32dp">
            <TextView
                    android:text="@string/shots"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvShot"
                    android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            />
            <EditText
                    android:hint="@string/price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/tvShotPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="112dp"
            />
            <TextView
                    android:text="@string/default_price"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvShotTotalPrice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"
            />
        </LinearLayout>
        <Button
                android:text="@string/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BtnSubmitDrinks"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/shotsLay"/>
    </LinearLayout>
</ScrollView>