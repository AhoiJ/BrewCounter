<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SessionMode">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TableRow
                android:id="@+id/titleTable"
                android:layout_width="match_parent"
                android:layout_height="64dp" app:layout_constraintTop_toTopOf="parent"
        >
            <TextView
                    android:text="@string/session_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/tvSessionStartTime"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>
            <TextView
                    android:text="@string/session_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:id="@+id/tvTitle"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>
            <TextView
                    android:text="@string/session_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/tvSessionEndTime"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"

            />
        </TableRow>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/sBeerLay"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/titleTable">
            <TextView
                    android:text="@string/beer033"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSmallBeerSes"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <TextView
                    android:text="@string/default_amount"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSbAmountSes"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnSubtractSbSes" android:layout_marginTop="8dp"
                    tools:src="@drawable/button_subtract_icon"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/button_subtract_icon"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnAddSbSes"
                    tools:src="@drawable/button_plus_icon"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/button_plus_icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/lBeerLay"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/sBeerLay">
            <TextView
                    android:text="@string/beer05"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLargeBeerSes"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <TextView
                    android:text="@string/default_amount"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLbAmountSes"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnSubtractLbSes" android:layout_marginTop="8dp"
                    tools:src="@drawable/button_subtract_icon"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/button_subtract_icon"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnAddLbSes"
                    tools:src="@drawable/button_plus_icon"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/button_plus_icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/longDrinkLay"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/lBeerLay">
            <TextView
                    android:text="@string/long_drink"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLongDrinkSes"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <TextView
                    android:text="@string/default_amount"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLdAmountSes"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnSubtractLdSes" android:layout_marginTop="8dp"
                    tools:src="@drawable/button_subtract_icon"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/button_subtract_icon"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnAddLdSes"
                    tools:src="@drawable/button_plus_icon"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/button_plus_icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/ciderLay"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/longDrinkLay">
            <TextView
                    android:text="@string/cider"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCiderSes"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <TextView
                    android:text="@string/default_amount"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCiderAmountSes"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnSubtractCiderSes" android:layout_marginTop="8dp"
                    tools:src="@drawable/button_subtract_icon"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/button_subtract_icon"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnAddCiderSes"
                    tools:src="@drawable/button_plus_icon"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/button_plus_icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/wineGlassLay"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/ciderLay">
            <TextView
                    android:text="@string/wine_glass"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvWineGlassSes"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <TextView
                    android:text="@string/default_amount"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvWgAmountSes"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnSubtractWGSes" android:layout_marginTop="8dp"
                    tools:src="@drawable/button_subtract_icon"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/button_subtract_icon"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnAddWGSes"
                    tools:src="@drawable/button_plus_icon"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/button_plus_icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/shotsLay"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/wineGlassLay">
            <TextView
                    android:text="@string/shots"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvShotSes"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <TextView
                    android:text="@string/default_amount"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvShotAmountSes"
                    android:layout_gravity="center"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnSubtractShotSes" android:layout_marginTop="8dp"
                    tools:src="@drawable/button_subtract_icon"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/button_subtract_icon"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
            </Space>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/iBtnAddShotSes"
                    tools:src="@drawable/button_plus_icon"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/button_plus_icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>