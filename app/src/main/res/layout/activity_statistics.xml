<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StatisticsActivity">

    <Button
            android:text="@string/total_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTotalStats" android:layout_marginTop="208dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp"/>
    <Button
            android:text="@string/session_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSessionHistory" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="160dp"
            android:layout_marginStart="160dp" app:layout_constraintTop_toBottomOf="@+id/btnTotalStats"
            android:layout_marginTop="84dp"/>
</android.support.constraint.ConstraintLayout>